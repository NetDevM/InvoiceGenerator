@model Product


<div class="row">
    <div class="col-12 col-lg-6">
        <div class="card">
            <div class="card-body">
                <h2 class="mb-4 text-md font-weight-bold">Edit Product</h2>
                @{
                    await Html.RenderPartialAsync("_AlertPartial");
                }
                <form class="row" method="post" asp-action="EditProduct" asp-controller="Products">
                    <input type="hidden" asp-for="Id" />
                    <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
                    <div class="col-12 col-lg-10 pr-xl-3">

                        <div class="form-group">
                            <label asp-for="ProductCode">Code</label>
                            <input asp-for="ProductCode" type="text" class="form-control">
                            <span asp-validation-for="ProductCode" class="text-danger"></span>

                        </div> <!-- end of form-group -->
                        <div class="form-group">
                            <label asp-for="Name">Name</label>
                            <input asp-for="Name" type="text" class="form-control">
                            <span asp-validation-for="Name" class="text-danger"></span>

                        </div> <!-- end of form-group -->

                        <div class="form-group">
                            <label asp-for="Price">Price</label>
                            <input asp-for="Price" type="number" class="form-control">
                            <span asp-validation-for="Price" class="text-danger"></span>
                        </div> <!-- end of form-group -->
                        <!-- end of d-flex -->
                        <div class="form-group">
                            <div class="text-right"><button type="submit" class="btn btn-primary">Submit</button></div>
                        </div>
                    </div> <!-- end of col -->

                </form> <!-- end of row -->
            </div> <!-- end of card-body -->
        </div> <!-- end of card -->
    </div> <!-- end of col -->
</div> <!-- end of row -->
@section Scripts {
    <partial name="~/Views/Shared/_ValidationScriptsPartial.cshtml" />
}