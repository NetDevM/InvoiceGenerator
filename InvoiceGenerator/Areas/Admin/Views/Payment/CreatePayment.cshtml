@model PaymentViewModel

@{
    ViewData["Title"] = "Add Payment";
}
<div class="row">
    <div class="col-12 col-lg-6">
        <div class="card">
            <div class="card-body">
                <h2 class="mb-4 text-md font-weight-bold">Add Payment</h2>
                @{
                    await Html.RenderPartialAsync("_AlertPartial");
                }
                <form class="row" method="post" asp-action="CreatePayment" asp-controller="Payment">
                    <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
                    <div class="col-12 col-lg-10 pr-xl-3">

                        <div class="form-group">
                            <label>Customer</label>
                            <select class="form-control" id="ddlpayblecustomer" asp-items="@Model.Customers" asp-for="@Model.SelectedCustomerId">
                                <option value="0">select</option>
                            </select>

                        </div> <!-- end of form-group -->

                        <div class="form-group">
                            <label>Sales Invoice Number</label>
                            
                            <select class="form-control" id="ddlsalesinvoice" asp-for="@Model.SelectedSalesInvoiceId">
                                <option value="0">select</option>
                            </select>

                        </div> <!-- end of form-group -->
                        <div class="form-group">
                            <label>Grand Total</label>
                            <input asp-for="@Model.Payment.GrandTotal" type="number" class="form-control" readonly="@(true)">
                            <span asp-validation-for="@Model.Payment.GrandTotal" class="text-danger"></span>
                        </div> <!-- end of form-group -->


                        <div class="form-group">
                            <label  >Amount Received</label>
                            <input asp-for="@Model.Payment.ReceivedAmount" type="number" class="form-control">
                            <span asp-validation-for="@Model.Payment.ReceivedAmount" class="text-danger"></span>
                        </div> <!-- end of form-group -->

                        <div class="form-group">
                            <label  >Due Amount</label>
                            <input disabled asp-for="@Model.Payment.DueAmount" type="text" class="form-control" disabled="disabled">
                            <span asp-validation-for="@Model.Payment.DueAmount" class="text-danger"></span>
                        </div> <!-- end of form-group -->
                        <!-- end of d-flex -->

                        <div class="form-group">
                            <label>Payment Mode</label>
                            <select class="form-control" id="ddlpaymentmode" asp-for="@Model.SelectedPaymentMode">
                                <option value="select">select</option>
                                <option value="cash">Cash</option>
                                <option value="cheque">Cheque</option>
                                <option value="card">Card</option>
                            </select>

                        </div> <!-- end of form-group -->

                        <div class="form-group">
                            <label>Notes</label>
                            <textarea asp-for="@Model.Payment.PaymentNotes" class="form-control"></textarea>                            
                        </div> <!-- end of form-group -->
                        <!-- end of d-flex -->
                        <div class="form-group">
                            <div class="text-right"><button type="submit" class="btn btn-primary">Submit</button></div>
                        </div>
                    </div> <!-- end of col -->

                </form> <!-- end of row -->
            </div> <!-- end of card-body -->
        </div> <!-- end of card -->
    </div> <!-- end of col -->
</div> <!-- end of row -->
@section Scripts {
    <partial name="~/Views/Shared/_ValidationScriptsPartial.cshtml" />
}