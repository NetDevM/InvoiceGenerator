@model PasswordResetModel
@{
    ViewData["Title"] = "Change Password";
}
<div class="row">
    <div class="col-12 col-lg-6">
        <div class="card">
            <div class="card-body">
                <h2 class="mb-4 text-md font-weight-bold">Reset Password</h2>
                @{
                    await Html.RenderPartialAsync("_AlertPartial");
                }

                <form class="row" method="post" asp-action="ResetPassword" asp-controller="Settings">
                    <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
                    <div class="col-12 col-lg-10 pr-xl-2">
                        <div class="form-group">
                            <label for="inputGroupIcon">Current Password</label>
                            <label for="inputGroupIcon" style="float:right;">Show Password <input type="checkbox" onchange="togglepasswordview(event)"></label>
                            <div class="input-group">
                                <input asp-for="CurrentPassword" type="password" class="form-control">
                                <span asp-validation-for="CurrentPassword" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="form-group">
                            <label asp-for="Password">New Password</label>
                            <input asp-for="Password" type="password" class="form-control">
                            <span asp-validation-for="Password" class="text-danger"></span>


                        </div> <!-- end of form-group -->
                        <div class="form-group">
                            <label asp-for="ConfirmPassword">Confirm Password</label>
                            <input asp-for="ConfirmPassword" type="password" class="form-control">
                            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                        </div> <!-- end of form-group -->
                        <!-- end of d-flex -->
                        <div class="form-group">
                            <div class="text-right"><button type="submit" class="btn btn-primary">Submit</button></div>
                        </div>
                    </div> <!-- end of col -->

                </form> <!-- end of row -->
            </div> <!-- end of card-body -->
        </div> <!-- end of card -->
    </div> <!-- end of col -->
</div> <!-- end of row -->
@section Scripts {
    <partial name="~/Views/Shared/_ValidationScriptsPartial.cshtml" />
}

<script>
    function togglepasswordview(e) {

        const { checked } = e.target;

        var oldpassword = document.getElementById("CurrentPassword");
        var password = document.getElementById("Password");
        var confirmpassword = document.getElementById("ConfirmPassword");

        if (checked) {
            //show password
            oldpassword.type = "text";
            password.type="text";
            confirmpassword.type="text";
        }
        else {
            //hide password plan text
            oldpassword.type = "password";
            password.type = "password";
            confirmpassword.type = "password"; 
        }
         
    }
</script>