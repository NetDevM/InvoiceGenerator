@model InvoiceViewModel
@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Invoice</title>

    <style>
        .invoice-box {
            max-width: 800px;
            margin: auto;
            padding: 30px;
            border: 1px solid #eee;
            font-size: 16px;
            line-height: 24px;
            font-family: 'Helvetica Neue', 'Helvetica', Helvetica, Arial, sans-serif;
            color: #555;
        }

        @@page {
            size: auto; /* auto is the initial value */
            margin: 0; /* this affects the margin in the printer settings */
        }

        @@media print {
            a[href]:after {
                content: none !important;
            }

            @@page {
                margin-top: 0;
                margin-bottom: 0;
            }

            body {
                padding-top: 72px;
                padding-bottom: 72px;
            }

            #btnprint {
                display: none;
            }
        }

        .invoice-box table {
            width: 100%;
            line-height: inherit;
            text-align: left;
        }

            .invoice-box table td {
                padding: 5px;
                vertical-align: top;
            }

            .invoice-box table tr td:nth-child(2) {
                text-align: right;
            }

            .invoice-box table tr.top table td {
                padding-bottom: 20px;
            }

                .invoice-box table tr.top table td.title {
                    font-size: 45px;
                    line-height: 45px;
                    color: #333;
                }

            .invoice-box table tr.information table td {
                padding-bottom: 40px;
            }

            .invoice-box table tr.heading td {
                background: #eee;
                border-bottom: 1px solid #ddd;
                font-weight: bold;
            }

            .invoice-box table tr.details td {
                padding-bottom: 20px;
            }

            .invoice-box table tr.item td {
                border-bottom: 1px solid #eee;
            }

            .invoice-box table tr.item.last td {
                border-bottom: none;
            }

            .invoice-box table tr.total td:nth-child(2) {
                border-top: 2px solid #eee;
                font-weight: bold;
            }

        .lastitemcolumn {
            text-align: right;
        }

        @@media only screen and (max-width: 600px) {
            .invoice-box table tr.top table td {
                width: 100%;
                display: block;
                text-align: center;
            }

            .invoice-box table tr.information table td {
                width: 100%;
                display: block;
                text-align: center;
            }
        }

    </style>
</head>

<body>
    <button class="btn btn-primary" onclick="printinvoice()" id="btnprint" type="button" style="color: #fff;
    background-color: #2196f3;
    border-color: #2196f3;
    box-shadow: 0 3px 1px -2px rgb(0 0 0 / 2%), 0 2px 2px 0 rgb(0 0 0 / 14%), 0 1px 5px 0 rgb(0 0 0 / 12%);
cursor:pointer;
margin-left: 45%;

    text-align: center;
    width: 10%;
    font-weight: bold;
">
        Print
    </button>
    <div id="invoice-box" class="invoice-box">
        <table cellpadding="0" cellspacing="0">
            <tr class="top">
                <td colspan="3">
                    <table>
                        <tr>
                            <td class="title">
                                <img src="@Model.StoreSettings.ImageUrl" style="width: 80px;" />
                            </td>
                            <td>
                                Invoice #: @Model.SalesInvoice.InvoiceCode<br />
                                Created: @Model.SalesInvoice.InvoicedOn.ToShortDateString()<br />
                            </td>
                        </tr>
                    </table>
                </td>
            </tr>

            <tr class="information">
                <td colspan="3">
                    <table>
                        <tr>
                            <td>
                                @Model.StoreSettings.StoreName<br />
                                @Model.StoreSettings.Address<br />
                            </td>

                            <td>
                                @Model.Customer.Name<br />
                                @Model.Customer.Address<br />
                                @Model.Customer.Email
                            </td>
                        </tr>
                    </table>
                </td>
            </tr>

            <tr class="heading">
                <td colspan="2">Payment Method</td>
                <td>@Model.SalesInvoice.PaymentMethod #</td>
            </tr>
            <tr>
                <td><br /></td>
            </tr>
            <tr class="heading">
                <td>Item</td>
                <td>Quantity </td>
                <td class="lastitemcolumn">Price</td>
            </tr>

            @foreach (var item in Model.SalesInvoice.SalesProductLineItems)
            {
                <tr class="item">
                    <td>@item.ProductName</td>
                    <td>@item.Quantity</td>
                    <td class="lastitemcolumn">@Model.StoreSettings.Currency @item.Price </td>
                </tr>
            } 
            <tr>
                <td></td>
                <td colspan="2">Discount:  @Model.SalesInvoice.DiscountPercentage% </td>
            </tr>
            <tr>
                <td></td>
                <td colspan="2">Shipping: @Model.StoreSettings.Currency @Model.SalesInvoice.Shipping </td>
            </tr>
            <tr class="total">
                <td></td>

                <td colspan="2">Grand Total: @Model.StoreSettings.Currency  @Model.SalesInvoice.GrandTotal </td>
            </tr>
        </table>
    </div>
</body>


<script>

    const printinvoice = () => {
        window.print();
    };

</script>
</html>